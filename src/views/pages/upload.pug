extends ../templates/base

block scripts 
    script(src="/static/js/recorder.js" defer) 

block content 
    div 
        video#preview
        button#startBtn Start Recording
    if errorMessage
        strong=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file", accept="video/*" required, id="video", name="video")
        input(name="title", placeholder="Title", required, type="text", maxlength=80)
        input(name="description", placeholder="Description", required, type="text", minlength=10)
        input(name="hashtags", placeholder="Hashtags, seperated by comma.", required, type="text")
        input(type="submit", value="Upload Video")