        span#errorMessage=errorMessage
    form(method="POST")
        input(placeholder="Current Password" type="password" name="oldPW")
        input(placeholder="New Password" type="password" name="newPW")
        input(placeholder="New Password Confirmation" type="password" name="newPW2")
        input(value="Change Password" type="submit")